<div class='container p-3'>
  <h1 class='text-center'><%= @list.name %></h1>

  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
        <div class="card">
          <img src='<%= bookmark.movie.poster_url%>' alt='' class='img-thumbnail'>
          <div class='card-body'>
            <h5 class='card-title'><%= bookmark.movie.title%></h5>
            <p class='card-text'><%= bookmark.movie.overview%></p>
            <p>
              <%= bookmark.comment %>
            </p>
            <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        </div>
    <% end %>
  </div>

  <div class='form-content w-50'>
    <%= simple_form_for([@list, @bookmark]) do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.submit 'Add movie', class: 'btn btn-secondary' %>
    <% end %>
  </div>

</div>
<div class='container justify-content-center pt-3'>
  <%= link_to "Delete", list_path(@list), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-secondary'%>

  <%= link_to "Back to Lists", lists_path, class: 'btn btn-secondary' %>
</div>
